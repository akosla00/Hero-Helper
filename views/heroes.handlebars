<div class="card-columns">
    {{#each mapHeroes as |hero|}}
    <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="{{hero.img}}" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">{{hero.heroName}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">Power Level: {{hero.powerLevel}},</h6>
        {{!-- <p class="card-text">{{hero.description}}</p>
        <p class="card-text">{{hero.locationBase}}</p> --}}
    </div>
    </div>
    {{/each}}
</div>

<div id="login-flex" class="">
    <form id="heroCreationForm">
        <h2>Register as a Hero!</h2>
        <div class="mb-3">
            <label for="inputHeroName" class="form-label">Hero Name</label>
            <input type="text" class="form-control" id="inputHeroName" >
        </div>
        <div class="mb-3">
            <label for="inputImage" class="form-label">Paste Image Url Here</label>
            <input type="text" class="form-control" id="inputImage">
        </div>
        <div class="mb-3">
            <label for="inputFirstName" class="form-label">First Name</label>
            <input type="text" class="form-control" id="inputFirstName" placeholder="Leave blank if no first name">
        </div>
        <div class="mb-3">
            <label for="inputLastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" id="inputLastName" placeholder="Leave blank if no last name">
        </div>
        <div class="mb-3">
            <label for="inputDescription" class="form-label">Description</label>
            <input type="text" class="form-control" id="inputDescription">
        </div>
        <div class="mb-3">
            <label for="inputPowerLevel">Select power level (5 is the strongest)</label>
            <select class="form-control" id="inputPowerLevel">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="inputLocation" class="form-label">Based in what city?</label>
            <input type="text" class="form-control" id="inputLocation">
        </div>
        <div class="mb-3">
            <label for="inputTravelSpeed">Select travel speed (as fast as a...)</label>
            <select class="form-control" id="inputTravelSpeed">
            <option>Foot</option>
            <option>Car</option>
            <option>Plane</option>
            </select>
        </div>
        <hr>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>

<script src="/js/heroes.js"></script>